@model List<Game>
@using GamingWebsite.Settings
@{
    ViewData["Title"] = "Home Page";
}

@if(Model.Count == 0) {
    <div class="alert  alert-info">
        <strong>No Games Added Yet!!</strong> Want to  <a asp-controller = "Games" asp-action = "Create" class="alert-link" data-ur1313m3t="true">Add a new Game ?</a>.
    </div>
}
else{
    <div class= "row">
        @foreach (Game game in Model) {
            <div class="col-lg-4 col-md-6">
                <a asp-controller ="Games" asp-action = "Details" asp-route-id = "@game.Id" class="card border-success mb-3 text-decoration-none">
                    <div class="card-body" style="background-image: url('@($"{FileSettings.ImagePath}{game.Cover}")'); background:size: cover; background-position: center; height: 650px; background-size: cover;">
                        <div class = "d-flex align-items-end h-100">
                            <span class="badge bg-info fs-2px">@game.Category.Name</span>
                        </div>
                    </div>
                    <div class = "card-footer text-muted  justefy-contenet-between align-items-center">
                        <h5>@game.Name</h5>
                    <div>
                        @foreach(Platform platform in game.Platforms) {
                                <i class="@platform.Icon me-2 fs-2"></i>
                        }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

}